{
  "manifest_version": 3,
  "name": "MouseHunt IAP Market Checker",
  "version": "2.0.0",
  "description": "Fetch MouseHunt IAP rewards and compare their market values with live MarketHunt data.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.mousehuntgame.com/*",
    "https://api.markethunt.win/*",
    "https://api.exchangerate-api.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.mousehuntgame.com/*"],
      "js": [
        "libs/interact.min.js",
        "libs/tabulator.min.js",
        "libs/money.min.js",
        "src/currency.js",
        "src/api.js",
        "src/ui.js",
        "src/content.js"
      ],
      "css": [
        "styles/tabulator_site_dark.min.css",
        "styles/styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "extension/popup.html",
    "default_title": "MouseHunt IAP2Gold"
  },
  "homepage_url": "https://github.com/JunRong19/MouseHunt-IAP2Gold",
  "author": "Tan Jun Rong"
}
